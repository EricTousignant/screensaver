{
  "entrypoint": "html/options.html",
  "shell": "html/options.html",
  "sources": [
    "scripts/**/*.js",
    "elements/**/*.js",
    "html/**/*",
    "styles/**/*",
    "images/**/*"
  ],
  "extraDependencies": [
    "manifest.json",
    "_locales/**/*",
    "assets/**/*",
    "lib/**/*"
  ],
  "fragments": [
    "html/background.html",
    "html/screensaver.html"
  ],
  "builds": [
    {
      "name": "prod",
      "browserCapabilities": [
        "es2015",
        "modules"
      ],
      "js": {
        "minify": true,
        "transformModulesToAmd": false
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      },
      "bundle": {
        "inlineScripts": false
      },
      "addServiceWorker": false
    },
    {
      "name": "dev",
      "browserCapabilities": [
        "es2015",
        "modules"
      ],
      "js": {
        "minify": false
      },
      "css": {
        "minify": false
      },
      "html": {
        "minify": false
      },
      "bundle": false,
      "addServiceWorker": false
    }
  ],
  "moduleResolution": "node",
  "npm": true,
  "lint": {
    "rules": [
      "polymer-3"
    ]
  }
}
