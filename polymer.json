{
  "root": "./app",
  "entrypoint": "html/options.html",
  "shell": "html/options.html",
  "sources": [
    "elements/**/*.js",
    "scripts/**/*.js",
    "images/**/*"
  ],
  "extraDependencies": [
    "node_modules/web-animations-js/web-animations-next.min.js",
    "node_modules/webextension-polyfill/dist/browser-polyfill.min.js",
    "manifest.json",
    "html/**/*",
    "_locales/**/*",
    "assets/**/*",
    "lib/**/*"
  ],
  "fragments": [
    "html/background.html",
    "html/screensaver.html",
    "html/update3.html"
  ],
  "moduleResolution": "node",
  "npm": true,
  "lint": {
    "rules": [
      "polymer-3"
    ],
    "ignoreWarnings": [
      "could-not-resolve-reference"
    ]
  },
  "builds": [
    {
      "name": "dev",
      "browserCapabilities": [
        "es2015",
        "modules"
      ],
      "js": {
        "minify": false,
        "transformModulesToAmd": false
      },
      "css": {
        "minify": false
      },
      "html": {
        "minify": false
      },
      "bundle": false,
      "addServiceWorker": false
    }
  ]
}
